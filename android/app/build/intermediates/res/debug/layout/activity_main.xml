<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:id="@+id/mainActivity">

    <TableLayout
        android:id="@+id/timingsTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0, 1"
        android:layout_marginTop="5dp"
        style="@style/AlertDialog.AppCompat"
        android:gravity="center_horizontal">

        <!--- Alarm Row -->
        <TableRow
            android:id="@+id/alarmRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView android:id="@+id/nextAlarm"
                android:layout_span="12"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <!--- Header Row -->
        <TableRow
            android:id="@+id/headerRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="5dp"
            android:onClick="pickDate"
            android:background="@color/header"
            android:padding="10dp">

            <TextView android:id="@+id/pickDateButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textColor="#ffffff" />


            <TextView  android:id="@+id/iqamahText"
                android:text="@string/jamaat_time"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textColor="#ffffff" />
        </TableRow>

        <!--- Fajr Row -->
        <TableRow
            android:id="@+id/fajrRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="5dp"
            android:background="#a2978860"
            android:padding="10dp"
            android:onClick="toggleRow">

            <TextView
                android:id="@+id/fajrCheck"
                android:text="@string/fajr"
                android:layout_gravity="center"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/fajrTime"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textSize="22sp" />
        </TableRow>

        <!--- Sunrise Row -->
        <TableRow
            android:id="@+id/sunriseRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="5dp"
            android:background="#a2978860"
            android:padding="10dp"
            android:onClick="toggleRow">

            <TextView
                android:id="@+id/sunriseCheck"
                android:text="@string/sunrise"
                android:layout_gravity="center"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/sunriseTime"
                android:layout_gravity="center"
                android:textSize="22sp" />
        </TableRow>

        <!--- Dhuhr Row -->
        <TableRow
            android:id="@+id/dhuhrRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="5dp"
            android:background="#a2978860"
            android:padding="10dp"
            android:onClick="toggleRow">

            <TextView
                android:id="@+id/dhuhrCheck"
                android:text="@string/dhuhr"
                android:layout_gravity="center"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/dhuhrTime"
                android:layout_gravity="center"
                android:textSize="22sp" />
        </TableRow>

        <!--- Asr Row -->
        <TableRow
            android:id="@+id/asrRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="5dp"
            android:background="#a2978860"
            android:padding="10dp"
            android:onClick="toggleRow">

            <TextView
                android:id="@+id/asrCheck"
                android:text="@string/asr"
                android:layout_gravity="center"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/asrTime"
                android:layout_gravity="center"
                android:textSize="22sp" />
        </TableRow>

        <!--- Maghrib Row -->
        <TableRow
            android:id="@+id/maghribRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="5dp"
            android:background="#a2978860"
            android:padding="10dp"
            android:onClick="toggleRow">

            <TextView
                android:id="@+id/maghribCheck"
                android:text="@string/maghrib"
                android:layout_gravity="center"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/maghribTime"
                android:layout_gravity="center"
                android:textSize="22sp" />
        </TableRow>

        <!--- Isha Row -->
        <TableRow
            android:id="@+id/ishaRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="5dp"
            android:background="#a2978860"
            android:padding="10dp"
            android:onClick="toggleRow">

            <TextView
                android:id="@+id/ishaCheck"
                android:text="@string/isha"
                android:layout_gravity="center"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/ishaTime"
                android:layout_gravity="center"
                android:textSize="22sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/version"
        android:text="@string/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</LinearLayout>
