<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:id="@+id/mainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@color/inactive"
            android:padding="5dp"
            android:layout_margin="10dp">

            <!-- News Title Row -->
            <TextView android:id="@+id/newsTitle"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="bold" />

            <!-- News Date Row -->
            <TextView android:id="@+id/newsDate"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:fillViewport="true">
                <!-- News Text Row -->
                <TextView android:id="@+id/newsText"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>
        </LinearLayout>


        <!--- Alarm Row -->
        <TextView android:id="@+id/nextAlarm"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/pickDateButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:onClick="pickDate"
                android:background="@drawable/row_border"
                android:clickable="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />


            <TextView  android:id="@+id/iqamahText"
                android:text="@string/iqaamah_time"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:background="@drawable/row_border"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:onClick="toggleTimings" />
        </LinearLayout>

        <!--- Fajr Row -->
        <LinearLayout
            android:id="@+id/fajrRow"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="#a2978860"
            android:padding="7dp"
            android:onClick="toggleRow"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/fajrCheck"
                android:text="@string/fajr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/fajrTime"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <!--- Sunrise Row -->
        <LinearLayout
            android:id="@+id/sunriseRow"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="#a2978860"
            android:padding="7dp"
            android:onClick="toggleRow"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/sunriseCheck"
                android:text="@string/sunrise"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/sunriseTime"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <!--- Dhuhr Row -->
        <LinearLayout
            android:id="@+id/dhuhrRow"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="#a2978860"
            android:padding="7dp"
            android:onClick="toggleRow"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/dhuhrCheck"
                android:text="@string/dhuhr"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/dhuhrTime"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <!--- Asr Row -->
        <LinearLayout
            android:id="@+id/asrRow"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="#a2978860"
            android:padding="7dp"
            android:onClick="toggleRow"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/asrCheck"
                android:text="@string/asr"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/asrTime"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <!--- Maghrib Row -->
        <LinearLayout
            android:id="@+id/maghribRow"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="#a2978860"
            android:padding="7dp"
            android:onClick="toggleRow"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/maghribCheck"
                android:text="@string/maghrib"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/maghribTime"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <!--- Isha Row -->
        <LinearLayout
            android:id="@+id/ishaRow"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="#a2978860"
            android:padding="7dp"
            android:onClick="toggleRow"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/ishaCheck"
                android:text="@string/isha"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/ishaTime"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_horizontal" />
        </LinearLayout>


        <!--<TextView-->
            <!--android:id="@+id/version"-->
            <!--android:text="@string/version"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center" />-->

    </LinearLayout>
</ScrollView><!-- From: file:/C:/Users/Haidar/Documents/GitHub/Masjid/android/app/src/main/res/layout/activity_main.xml -->